#!/usr/bin/env groovy

def gv

pipeline {
    agent {
        label 'developer'
    }
    environment {
        IMAGE_django_web = 'djangoreactdev/django-web:1.0'
        IMAGE_nginx_proxy = 'djangoreactdev/nginx-proxy:1.0'
    }
    stages {
        stage("init") {
            steps {
                script {
                    gv = load "./jenkins/script.groovy"
                }
            }
        }
        stage("build") {
            steps {
                script {
                    gv.buildJar()
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    gv.buildImage()
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }
    }
}